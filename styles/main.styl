$xl-width = 1600px

/*===============================
 *  Global Styles
 *==============================*/

/******** Image shadows ********/
.img--big-shadow
  box-shadow: $depth-img

/******** Buttons ********/
.btn
  font-family: 'Montserrat'!important
  color: $darkBlue!important
  font-weight: 500
  border: 2px solid $darkBlue
  padding: 10px!important
  height: inherit!important
  width: 10rem
  margin-left: 1rem
  text-align: center
  position: relative!important
  display: block
  overflow hidden
  z-index: 1
  &:hover
    color: $white!important
    transition: 0.4s ease-in-out;
    &:before
      transform: translateX(0);
      transition: 0.4s ease-in-out;

.btn:before
  content ''
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: $darkBlue
  transform: translateX(-100%);
  z-index: -1

.btn--primary,
.btn--default
  margin-left 0
  text-transform: uppercase
  color: $white!important
  border: 2px solid $white
  &:hover
    text-decoration: none
    border-color: $lightBlue
    box-shadow $depth-3
  &:before
    background-color: $lightBlue
  &:active
    border-color: $white
    box-shadow $depth-1
    transition: 0.2s ease-in-out;

.btn--default
  border: 2px solid $mediumBlue
  color: $mediumBlue!important

.btn--link
  font-family: 'Montserrat'!important
  color: $mediumBlue!important
  font-weight: 500
  text-transform: uppercase
  font-size: 14px
  &:hover
    color: $lightBlue!important
    text-decoration: none 
  &::before
    border-bottom: 1px solid $lightBlue!important

.btn-submit
  margin-left 0
  text-transform: uppercase
  color: $white!important
  border: 2px solid $white
  background: $mediumBlue
  font-family: 'Montserrat'!important 
  font-size: 18px
  font-weight: 500
  width: 10rem!important
  cursor: pointer 
  &:hover
    text-decoration: none
    border-color: $lightBlue
    box-shadow $depth-3
  &:before
    background-color: $lightBlue
  &:active
    border-color: $white
    box-shadow $depth-1
    transition: 0.2s ease-in-out;


.btn-submit:before
  content ''
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: $lightBlue!important
  transform: translateX(-100%);
  z-index: -1
