    font-weight: 300
    font-size: 14px
    color: $white

footer
  background: $footerDarkBlue!important
  color: $white!important
  span, a
    font-family: 'Montserrat'
    font-weight: 300
    font-size: 14px
    color: $white!important
a:hover
  color: $white!important

/******** Cards ********/
.uk-card-default
  box-shadow: $depth-2!important
  transition: box-shadow .3s ease-in-out;
  &:hover
    box-shadow: $depth-4!important
    transition: box-shadow .3s ease-in-out;

.uk-card-primary 
  background: $mediumBlue!important
  color: $white!important
  box-shadow: $depth-2!important
  transition: box-shadow .3s ease-in-out;
  h3, p, a
    color: $white!important
  .uk-divider-small
    &::after
      border-top: 2px solid $white
      border-top-color: $white!important
  &:hover
    box-shadow: $depth-4!important
    transition: box-shadow .3s ease-in-out;
  .uk-card-media-top
    overflow: hidden;

.uk-card-media-top--scale-up
  transition: all .6s ease;
  background: $lightBlue

.uk-card-media-top--scale-up:hover
  transform: scale(1.2);
  opacity: 0.5

