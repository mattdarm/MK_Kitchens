/*===============================
 *  Colors
 *==============================*/

$darkBlue = #002157
$mediumBlue = #26487F
$lightBlue = #5092FF
$white = #F8F8F8

$footerLightBlue = #383F53
$footerDarkBlue = #0D192E

/*===============================
 *  Shadows
 *==============================*/

$depth-1 = 0 2px 2px 0 rgba(0,0,0,0.14), 
           0 3px 1px -2px rgba(0,0,0,0.12), 
           0 1px 5px 0 rgba(0,0,0,0.2);
$depth-2 = 0 4px 5px 0 rgba(0,0,0,0.14), 
           0 1px 10px 0 rgba(0,0,0,0.12), 
           0 2px 4px -1px rgba(0,0,0,0.3);
$depth-3 = 0 8px 17px 2px rgba(0,0,0,0.14), 
           0 3px 14px 2px rgba(0,0,0,0.12), 
           0 5px 5px -3px rgba(0,0,0,0.2);
$depth-4 = 0 16px 24px 2px rgba(0,0,0,0.14), 
           0 6px 30px 5px rgba(0,0,0,0.12), 
           0 8px 10px -7px rgba(0,0,0,0.2);
$depth-5 = 0 24px 38px 3px rgba(0,0,0,0.14), 
           0 9px 46px 8px rgba(0,0,0,0.12), 
           0 11px 15px -7px rgba(0,0,0,0.2);
$depth-img = 0px 20px 60px rgba(0,0,0, 0.6);

/*===============================
 *  Fonts
 *==============================*/

@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600')

@import url('https://fonts.googleapis.com/css?family=Roboto+Slab:300,400,700')



